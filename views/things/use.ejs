<% include ../partials/header %>

<div class="ui text container segment">
  <div class="ui attached segment">
    <h1 class="ui center aligned header">Use <%= thing.name %></h1>
    <form action="/mythings/<%= thing.id %>/use?_method=PUT" method="post" class="ui big form">
      <label for="purchaseDate">I used it on...</label>
      <div class="field ui fluid action input">
        <input type="text" name="useDate" class="date-picker" placeholder="Date" id="use-today-input" required>
        <button class="ui big basic teal button" id="use-today-button" type="button">Today</button>
      </div>
      <div class="ui hidden section divider"></div>
      <button class="ui big primary button" type="submit">Submit</button>
      <a class="ui big negative button" href="/mythings/<%= thing.id %>">Cancel</a>
    </form>
  </div>
</div>

<% include ../partials/footer %>
